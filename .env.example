# Environment variables for Deep Research Report Generation Agent System

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_BASE_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Vector Database Configuration
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./vector_db
CHROMA_PERSIST_DIR=./chroma_db

# Memory Layer Configuration
MAIN_CONTEXT_SIZE=8192
EXTERNAL_CONTEXT_SIZE=1000000
MEMORY_SUMMARY_THRESHOLD=1000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=False

# Agent Configuration
AGENT_TIMEOUT=300
MAX_TOOL_CALLS_PER_STEP=10

# Tool Configuration
BROWSER_TOOL_ENABLED=True
CODE_EXECUTION_ENABLED=True
MAX_SEARCH_RESULTS=10

# Report Generation Configuration
REPORT_TEMPLATE_PATH=./templates
DEFAULT_REPORT_FORMAT=markdown

# Security and Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log