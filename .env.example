# Environment variables for Deep Research Report Generation Agent System

# LLM Provider Configuration
LLM_PROVIDER=doubao  # Options: openai, doubao

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Doubao Configuration
ARK_API_KEY=your_ark_api_key_here
DOUBAO_MODEL=doubao-seed-1-6-251015
DOUBAO_API_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3/chat/completions
DOUBAO_MAX_COMPLETION_TOKENS=65535
DOUBAO_REASONING_EFFORT=medium
DOUBAO_TEMPERATURE=0.7

# Vector Database Configuration
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./vector_db
CHROMA_PERSIST_DIR=./chroma_db

# Embeddings Configuration
# Options: doubao
EMBEDDING_PROVIDER=doubao
DOUBAO_EMBEDDING_API_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3/embeddings/multimodal
DOUBAO_EMBEDDING_MODEL=doubao-embedding-vision-250615

# Memory Layer Configuration
MAIN_CONTEXT_SIZE=8192
EXTERNAL_CONTEXT_SIZE=1000000
MEMORY_SUMMARY_THRESHOLD=1000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=False

# Agent Configuration
AGENT_TIMEOUT=300
MAX_TOOL_CALLS_PER_STEP=10

# Tool Configuration
BROWSER_TOOL_ENABLED=True
CODE_EXECUTION_ENABLED=True
MAX_SEARCH_RESULTS=10

# Report Generation Configuration
REPORT_TEMPLATE_PATH=./templates
DEFAULT_REPORT_FORMAT=markdown

# Security and Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Knowledge Base (Volcengine) Configuration
KNOWLEDGE_BASE_DOMAIN=api-knowledgebase.mlp.cn-beijing.volces.com
KNOWLEDGE_BASE_API_KEY=your_knowledge_base_api_key_here
KNOWLEDGE_BASE_SERVICE_ID=xxxxx